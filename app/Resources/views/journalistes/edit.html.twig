{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Modifier les informations sur un journaliste</h1>

         {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.nom, "Nom du journaliste") }}
                                {{ form_widget(edit_form.nom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>                      
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.email, "Adresse Email") }}
                                {{ form_widget(edit_form.email,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.phone, "Téléphone ") }}
                                {{ form_widget(edit_form.phone,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.ville, "Ville") }}
                                {{ form_widget(edit_form.ville,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.pays, "Pays") }}
                                {{ form_widget(edit_form.pays,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.radio, "Nom de votre radio") }}
                                {{ form_widget(edit_form.radio,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.programme, "Le programme que vous animez au sein de cette radio") }}
                                {{ form_widget(edit_form.programme,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.langues, "Langues") }}
                                {{ form_widget(edit_form.langues,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
        <input type="submit" value="Modifier" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('journalistes_index') }}">Retourner à la liste des journalistes</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
    
{% endblock %}

