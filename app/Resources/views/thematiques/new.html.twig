{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Créer une nouvelle Thematique</h1>

    {{ form_start(form) }}
        <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.titre) }}
                                {{ form_widget(form.titre,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.delais) }}
                                {{ form_widget(form.delais,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.datepublication) }}
                                {{ form_widget(form.datepublication,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
        <input class="btn btn-success" type="submit" value="Ajouter" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('thematiques_index') }}">Retourner à la liste des thématiques</a>
        </li>
    </ul>
{% endblock %}
