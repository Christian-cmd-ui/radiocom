{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Modifier une Thematique </h1>

    {{ form_start(edit_form) }}
        <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.titre) }}
                                {{ form_widget(edit_form.titre,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.delais) }}
                                {{ form_widget(edit_form.delais,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.datepublication) }}
                                {{ form_widget(edit_form.datepublication,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
        <input class="btn btn-primary" type="submit" value="Modifier" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('thematiques_index') }}">Retourner à la liste des thématiques</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
