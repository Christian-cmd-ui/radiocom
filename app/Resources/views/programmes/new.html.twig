{% extends 'base_admin.html.twig' %}

{% block content %}
 <header class="panel-heading">
                    <h1 class="panel-title">Enregistrement d'une nouvelle grille des programmes</h1>
                </header>
                <div class="panel-body purple" style="margin-bottom: 8%; padding:3px">
                    {{ form_errors(form) }}
                    {{ form_start(form, {'method': 'post', 'action': path('programmes_new'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.heures, "Plage horaires") }}
                                {{ form_widget(form.heures,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.nom, "Nom de l'émission") }}
                                {{ form_widget(form.nom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.emission, "Titre de l'émission") }}
                                {{ form_widget(form.emission,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
                    <table class="pull-right mt-3">
                        <tr>
                            <td>
                                <input class="ladda-button btn-custom ladda-button-demo btn btn-primary" type="submit" value="Enregistrer" />
                            </td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>
                                <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('programmes_index', { type : 1}) }}">Retour à la liste des formations
                                </a>
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                    </table>
                    {{ form_end(form) }}

                </div>
    <ul>
        <li>
            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('programmes_index') }}">Retour à la liste des formations</a>
        </li>
    </ul>
{% endblock %}
