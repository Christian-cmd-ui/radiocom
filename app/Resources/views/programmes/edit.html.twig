{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Modifier les informations sur un programme</h1>

         {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.nom, "Nom du membre") }}
                                {{ form_widget(edit_form.nom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.heures, "Plage horaires") }}
