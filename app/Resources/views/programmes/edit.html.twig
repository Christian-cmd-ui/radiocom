                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.emission, "Emission") }}
                                {{ form_widget(edit_form.emission,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
        <input type="submit" value="Modifier" />
