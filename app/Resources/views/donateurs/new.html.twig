{% extends 'base_admin.html.twig' %}

{% block content %}
                <header class="panel-heading">
                    <h1 class="panel-title">Enregistrement d'un nouveau Donateur</h1>
                </header>
                <div class="panel-body purple" style="margin-bottom: 8%; padding:3px">
                    {{ form_errors(form) }}
                    {{ form_start(form, {'method': 'post', 'action': path('donateurs_new'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.nom, "Nom du membre") }}
                                {{ form_widget(form.nom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.prenom, "Prénom du membre") }}
                                {{ form_widget(form.prenom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.sexe, "Sexe du membre") }}
                                {{ form_widget(form.sexe,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.pays, "Pays du donateur") }}
                                {{ form_widget(form.pays,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.email, "Email du membre") }}
                                {{ form_widget(form.email,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.phone, "Téléphone du membre") }}
                                {{ form_widget(form.phone,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.montant, "Montant $") }}
                                {{ form_widget(form.montant,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
                    <table class="pull-right mt-3">
                        <tr>
                            <td>
                                <input class="ladda-button btn-custom ladda-button-demo btn btn-primary" type="submit" value="Enregistrer" />
                            </td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>
                                <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('donateurs_index', { type : 1}) }}">Retour à la liste
                                </a>
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                    </table>
                    {{ form_end(form) }}

                </div>

{% endblock %}
