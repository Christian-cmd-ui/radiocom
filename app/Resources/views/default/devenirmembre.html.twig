{% extends 'base.html.twig' %}
{% block body %}

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title mt-2">
                        <h4 class="m-0 text-uppercase font-weight-bold">{% trans into app.request.locale %}Enregistrement de Votre Radio communautaire{% endtrans %}</h4>
                    </div>
                    {% for msg in app.session.flashBag.get('radio') %}
                        <div class="alert alert-success">
                            {{ msg }}
                        </div>
                    {% endfor %}
                <div class="panel-body purple" style="margin-bottom: 8%; padding:3px">
                    {{ form_errors(form) }}
                    {{ form_start(form, {'method': 'post', 'action': path('ajouterradio'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.nom, "Nom de la Radio") }}
                                {{ form_widget(form.nom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.visuel) }}
                                {{ form_widget(form.visuel,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.frequence, "Frequence en Hz") }}
                                {{ form_widget(form.frequence,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.pays, "Pays") }}
                                {{ form_widget(form.pays,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.village, "Village") }}
                                {{ form_widget(form.village,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.langues, "Langues parlées par la radio") }}
                                {{ form_widget(form.langues,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.horaires, "plage horaires d'émission") }}
                                {{ form_widget(form.horaires,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <table class="pull-right mt-3">
                        <tr>
                            <td>
                                {% if app.request.attributes.get('_locale') == 'fr'%}
                                <input class="ladda-button btn-custom ladda-button-demo btn btn-primary" type="submit" value="Enregistrer" />
                                {% else %}
                                <input class="ladda-button btn-custom ladda-button-demo btn btn-primary" type="submit" value="Register" />
                                {% endif %}
                            </td>
                        
                        </tr>
                    </table>
                    {{ form_end(form) }}

                </div>
            </div>
       </div>
    </div>

 
{% endblock %}

