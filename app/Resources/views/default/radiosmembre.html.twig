{% extends 'base.html.twig' %}
{% block body %}
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title mt-2">
                        <h4 class="m-0 text-uppercase font-weight-bold">{% trans into app.request.locale %}Radios communautaires du r√©seau{% endtrans %}</h4>
                    </div>
                    <div class="col-md-12"> 
                    <div class="row">
                    {% for radio in radios %}
                       
                            <div class="col-md-6" style="border-radius: 5px; border: solid 2px #fc0; padding: 15px; margin: 1px;
    max-width: 49%;">
                            <div class="row">
                                <div class="col-md-6">
                                    <img src="{{ asset('uploads/imagesradios/' ~ radio.visuel) }}" style="width:100%">
                                </div>
                                <div class="col-md-6">
                                    <b>{% trans into app.request.locale %}Nom{% endtrans %} :</b>{{ radio.nom }}<br/>
                                    <b>{% trans into app.request.locale %}Description{% endtrans %}:</b>{{ radio.description }}<br/>
                                    <b>{% trans into app.request.locale %}Frequence{% endtrans %}:</b>{{ radio.frequence }}<br/>
                                    <b>{% trans into app.request.locale %}Pays{% endtrans %}:</b>{{ radio.pays }}<br/>
                                    <b>{% trans into app.request.locale %}Village{% endtrans %}:</b>{{ radio.village }}<br/>
                                    <b>{% trans into app.request.locale %}Langues{% endtrans %}:</b>{{ radio.langues }}<br/>
                                    <b>{% trans into app.request.locale %}Horaires{% endtrans %}:</b>{{ radio.horaires }}  <br/>          
                                </div>
                            </div>                    
                            </div>                    
                                          
                    {% endfor %}
                    </div>  
                    </div>    

                </div>
            </div>
        </div>
    </div>

{% endblock %}
