{% extends 'base_admin.html.twig' %}

{% block content %}
<header class="panel-heading">
                    <h1 class="panel-title">Enregistrement d'une nouvelle Radio</h1>
                </header>
                <div class="panel-body purple" style="margin-bottom: 8%; padding:3px">
                    {{ form_errors(form) }}
                    {{ form_start(form, {'method': 'post', 'action': path('radios_new'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.nom, "Nom de la Radio") }}
                                {{ form_widget(form.nom,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.visuel) }}
                                {{ form_widget(form.visuel,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.frequence, "Frequence en Hz") }}
                                {{ form_widget(form.frequence,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.pays, "Pays") }}
                                {{ form_widget(form.pays,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.village, "Village") }}
                                {{ form_widget(form.village,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.langues, "Langues parlées par la radio") }}
                                {{ form_widget(form.langues,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.horaires, "palge horaires d'émission") }}
                                {{ form_widget(form.horaires,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                    </div>
                    <table class="pull-right mt-3">
                        <tr>
                            <td>
                                <input class="ladda-button btn-custom ladda-button-demo btn btn-primary" type="submit" value="Enregistrer" />
                            </td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>
                                <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('radios_index', { type : 1}) }}">Retour à la liste des radios
                                </a>
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                    </table>
                    {{ form_end(form) }}

                </div>
    <ul>
        <li>
            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('radios_index') }}">Retour à la liste des radios</a>
        </li>
    </ul>
{% endblock %}
