{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Liste des radios enregistrées</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th> 
                <th>Image</th>
                <th>Frequence</th>
                <th>Pays</th>
                <th>Village</th>
                <th>Langues</th>               
                <th>Horaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for radio in radios %}
            <tr>
                <td><a href="{{ path('radios_show', { 'id': radio.id }) }}">{{ radio.id }}</a></td>
                <td>{{ radio.nom }}</td>
                <td>{{ radio.description }}</td>
                <td><a href="{{ asset('uploads/imagesradios/' ~ radio.visuel) }}">Voir en image</a></td>
                <td>{{ radio.frequence }}</td>
                <td>{{ radio.pays }}</td>
                <td>{{ radio.village }}</td>
                <td>{{ radio.langues }}</td>
                <td>{{ radio.horaires }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('radios_show', { 'id': radio.id }) }}">Détails</a>
                        </li>
                        <li>
                            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('radios_edit', { 'id': radio.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('radios_new') }}">Ajouter une nouvelle Radio</a>
        </li>
    </ul>
       {% block javascript %}
    <script>
        $(('.nav-item.nav-link')[1]).addClass('active');
        console.log($('.nav-item.nav-link')[1]);
    </script>
    {% endblock %}
{% endblock %}
