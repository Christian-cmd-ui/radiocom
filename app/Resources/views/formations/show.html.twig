{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Détails sur une formation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ formation.libelle }}</td>
            </tr>
            <tr>
                <th>Objectifs</th>
                <td>{{ formation.objectifs }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ formation.duree }}</td>
            </tr>
            <tr>
                <th>Modalité de participation</th>
                <td>{{ formation.modaliteparticipation }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ formation.type }}</td>
            </tr>
            <tr>
                <th>Nombreplace</th>
                <td>{{ formation.nombreplace }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ formation.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('formations_index') }}">Retourner à la liste des formations</a>
        </li>
        <li>
            <a class="btn btn-dark btn-custom waves-effect waves-light" href="{{ path('formations_edit', { 'id': formation.id }) }}">Modifier ces informations</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
