{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Ajouter une nouvelle Contribution</h1>

    {{ form_start(form) }}
        <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.theme, "Theme") }}
                                {{ form_widget(form.theme,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.contributeur, "Contributeur") }}
                                {{ form_widget(form.contributeur,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.contributions, "Contributions") }}
                                {{ form_widget(form.contributions,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.visuel, "Insérer votre image") }}
                                {{ form_widget(form.visuel,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.date, "Date") }}
                                {{ form_widget(form.date,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
        <input type="submit" value="Ajouter" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('contributions_index') }}">retourner à la liste des contributions</a>
        </li>
    </ul>
{% endblock %}
