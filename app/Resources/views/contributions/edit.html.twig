{% extends 'base_admin.html.twig' %}

{% block content %}
    <h1>Modifier une Contribution</h1>

    {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.theme, "Theme") }}
                                {{ form_widget(edit_form.theme,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.contributeur, "Contributeur") }}
                                {{ form_widget(edit_form.contributeur,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.contributions, "Contributions") }}
                                {{ form_widget(edit_form.contributions,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.visuel, "Insérer votre image") }}
                                {{ form_widget(edit_form.visuel,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(edit_form.date, "Date") }}
                                {{ form_widget(edit_form.date,{'attr':{'class':'form-control', 'required': 'required'}}) }}
                            </div>
                        </div>
                      
                    </div>
        <input type="submit" value="Modifier" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('contributions_index') }}">retourner à la liste des contributions</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
